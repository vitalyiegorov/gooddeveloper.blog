{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "allowJs": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "alwaysStrict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "components/*": [
                "src/components/*"
            ],
            "containers/*": [
                "src/containers/*"
            ],
            "types/*": [
                "types/*"
            ]
        },
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ]
    },
    "exclude": [
        "artifacts/**/*",
        "dist/**/*",
        "public/**/*",
        "node_modules"
    ],
    "include": [
        "src"
    ]
}
